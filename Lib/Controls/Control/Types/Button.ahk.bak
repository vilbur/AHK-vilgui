/** Class Button_vgui
*/
Class Button_vgui extends Control_vgui{

	;__New(){
	;	;MsgBox,262144,, Button_vgui, 2
	;
	;}

	/** add submit button
	*/
	submit($name:="Submit"){
		this._name	:= $name
		;Dump(this.Base(), "this.Base()", 1)
		this._bindDefaultCallback( &this.Base() ".submit")
		this.Controls().add(this)
		;return % this.add($name)
	}
	/** Destroy gui button
	*/
	close($name:="Close"){
		;MsgBox,262144,, close button,2
		this._bindDefaultCallback( &this.Base() ".close")
		;Dump(this, "this.", 0)
		return % this.add($name)
	}
	/** Exit
	*/
	exit($name:="Exit"){

		this._bindDefaultCallback( &this.Base() ".exit", this.Event.custom)
		return % this.add($name)
	}

}
